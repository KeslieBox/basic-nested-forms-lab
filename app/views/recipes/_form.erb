<%= form_for @recipe do |f| %>
    <%= f.label "Recipe Title" %>
    <%= f.text_field :title %><br>

    <%= f.label "Ingredients:" %><br>
    <%= f.fields_for :ingredients do |i| %>
        <%= i.label :name %>
        <%= i.text_field :name %>
        <%= i.label :quantity %>
        <%= i.text_field :quantity %><br>
    <% end %>


    <%= f.submit "Submit" %>
<% end %>